<%= @task.details %>
<div>
  <input type="checkbox" name="task-details" value="<%= @task.completed %>">
  <% if @task.completed == false %>
  <%= "This task is not completed yet"  %>
  <% else %>
  <%= "This task is complete"  %>
  <% end %>
</div>

